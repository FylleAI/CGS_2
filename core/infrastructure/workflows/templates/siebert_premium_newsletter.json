{
  "name": "siebert_premium_newsletter",
  "version": "2.0",
  "description": "Optimized premium newsletter generation for Siebert with Perplexity integration and 8-section Gen Z format",
  "handler": "premium_newsletter_handler",
  "variables": [
    {
      "name": "topic",
      "type": "string",
      "required": true,
      "description": "Main financial theme for the newsletter edition"
    },
    {
      "name": "target_audience",
      "type": "string",
      "required": true,
      "default": "Gen Z investors and young professionals",
      "description": "Specific target audience for this edition"
    },
    {
      "name": "target_word_count",
      "type": "integer",
      "required": false,
      "default": 1000,
      "description": "Total target word count (800-1200 range)"
    },
    {
      "name": "cultural_trends",
      "type": "string",
      "required": false,
      "description": "Current cultural trends to integrate (TikTok, social media, etc.)"
    },
    {
      "name": "exclude_topics",
      "type": "array",
      "required": false,
      "default": [
        "crypto day trading",
        "get rich quick",
        "penny stocks"
      ],
      "description": "Topics to exclude from analysis"
    },
    {
      "name": "research_timeframe",
      "type": "string",
      "required": false,
      "default": "last 7 days",
      "description": "Research timeframe (last 7 days, yesterday, last month)"
    },
    {
      "name": "premium_sources",
      "type": "string",
      "required": false,
      "description": "Custom premium research sources (newline-separated URLs)"
    },
    {
      "name": "siebert_target_urls",
      "type": "string",
      "required": false,
      "default": "https://www.thedailyupside.com/finance/|https://www.thedailyupside.com/investments/|https://www.thedailyupside.com/economics/|https://www.thedailyupside.com/newsletter/|https://moneywithkatie.com/blog/category/investing|https://thehustle.co/news|https://www.morningbrew.com/tag/finance|https://www.morningbrew.com/tag/economy|https://blog.siebert.com/tag/daily-market#BlogListing|https://www.axios.com/newsletters/axios-markets|https://www.axios.com/newsletters/axios-macro|https://decrypt.co/|https://www.coindesk.com/",
      "description": "Siebert-specific target URLs for premium research"
    },
    {
      "name": "custom_instructions",
      "type": "string",
      "required": false,
      "description": "Additional custom instructions for this edition"
    }
  ],
  "tasks": [
    {
      "id": "task1_siebert_context_setup",
      "name": "Siebert Brand Context & Template Setup",
      "agent": "rag_specialist",
      "dependencies": [],
      "prompt_id": "siebert_premium_newsletter_task1_siebert_context_setup"
    },
    {
      "id": "task2_perplexity_research",
      "name": "Multi-Source Research with Perplexity",
      "agent": "research_specialist",
      "dependencies": [
        "task1_siebert_context_setup"
      ],
      "prompt_id": "siebert_premium_newsletter_task2_perplexity_research"
    },
    {
      "id": "task3_newsletter_assembly",
      "name": "8-Section Newsletter Assembly & Optimization",
      "agent": "copywriter",
      "dependencies": [
        "task2_perplexity_research"
      ],
      "prompt_id": "siebert_premium_newsletter_task3_newsletter_assembly"
    },
    {
      "id": "task4_compliance_review",
      "name": "FINRA/SEC Compliance Review & Validation",
      "agent": "compliance_specialist",
      "dependencies": [
        "task3_newsletter_assembly"
      ],
      "prompt_id": "siebert_premium_newsletter_task4_compliance_review"
    }
  ]
}