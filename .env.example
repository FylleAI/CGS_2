# CGSRef Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=CGSRef
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
SERPER_API_KEY=your-serper-api-key-here


# Tool cost tracking (optional overrides to enable cost_breakdown_by_tool)
# SERPER web search pricing
SERPER_COST_PER_CALL_USD=0.0003

# Perplexity research pricing
# If you need a single blended rate (fallback used by current implementation):
PERPLEXITY_COST_PER_1K_TOKENS=
# Optional per-call (usually ND/unused):
PERPLEXITY_COST_PER_CALL_USD=
# Reference values you may adopt if we enable input/output split per model:
#   Sonar:     input $0.001, output $0.001 per 1k tokens
#   Sonar Pro: input $0.003, output $0.015 per 1k tokens
# Proposed (optional, not used unless code supports split):
# PERPLEXITY_SONAR_COST_PER_1K_TOKENS_INPUT=0.001
# PERPLEXITY_SONAR_COST_PER_1K_TOKENS_OUTPUT=0.001
# PERPLEXITY_SONAR_PRO_COST_PER_1K_TOKENS_INPUT=0.003
# PERPLEXITY_SONAR_PRO_COST_PER_1K_TOKENS_OUTPUT=0.015

# Image generation pricing
# OpenAI (default size 1024x1024 ~= medium)
OPENAI_IMAGE_COST_USD=0.04
# Optional tiered OpenAI image pricing (overrides by size/quality if set)
OPENAI_IMAGE_COST_LOW_USD=0.01
OPENAI_IMAGE_COST_MEDIUM_USD=0.04
OPENAI_IMAGE_COST_HIGH_USD=0.17

# Gemini 2.5 Flash Image (~1024x1024)
GEMINI_IMAGE_COST_USD=0.039

# Database
DATABASE_URL=sqlite:///./cgsref.db
DATABASE_ECHO=false

# File Storage
DATA_DIR=data
OUTPUT_DIR=data/output
PROFILES_DIR=data/profiles
WORKFLOWS_DIR=data/workflows
KNOWLEDGE_BASE_DIR=data/knowledge_base
CACHE_DIR=data/cache

# RAG Settings
RAG_ENABLED=true
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_RESULTS=5

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=data/chroma

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Content Generation Defaults
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-4o
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=

# Workflow Settings
WORKFLOW_TIMEOUT_SECONDS=600  # 10 minutes for complex workflows (Siebert multi-agent, Perplexity research)
MAX_RETRIES=3

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws
